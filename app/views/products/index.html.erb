<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Child</th>
      <th>Title</th>
      <th>Introduction</th>
      <th>Introduction voice link</th>
      <th>Image1 link</th>
      <th>Image2 link</th>
      <th>Image3 link</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.child_id %></td>
        <td><%= product.title %></td>
        <td><%= product.introduction %></td>
        <td><%= product.introduction_voice_link %></td>
        <td>
          <% if product.image1_link? %>
            <div class="thumbnail">
              <%= image_tag product.image1_link ,:size => "200x200" %>
            </div>
          <% end %>
        </td>
        <td>
          <% if product.image2_link? %>
            <div class="thumbnail">
              <%= image_tag product.image2_link ,:size => "200x200" %>
            </div>
          <% end %>
        </td>
        <td>
          <% if product.image3_link? %>
            <div class="thumbnail">
              <%= image_tag product.image3_link ,:size => "200x200" %>
            </div>
          <% end %>
        </td>
        <td><%= product.state %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

